<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:text="3:00"
        android:textSize="25sp" />

    <RatingBar
        android:id="@+id/ratingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tvTimer"
        android:numStars="@integer/rating_num_stars" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvTimer"
        android:layout_centerHorizontal="true"
        android:src="@drawable/drag_and_drop_icon" />
    
    <TextView
        android:id="@+id/tvExercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTimer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textSize="25sp" />

    <GridView
        android:id="@+id/answerGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvExercise"
        android:layout_marginTop="5dp"
        android:background="#808080"
        android:columnWidth="40dp"
        android:horizontalSpacing="10dp"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="50dp" >
    </GridView>

    <GridView
        android:id="@+id/gridview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/answerGrid"
        android:layout_marginTop="100dp"
        android:background="#f3f3f3"
        android:columnWidth="40dp"
        android:horizontalSpacing="10dp"
        android:numColumns="auto_fit"
        android:padding="50dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="30dp" >
    </GridView>

    <Button
        android:id="@+id/btnVerify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gridview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/verify" />

    <TextView
        android:id="@+id/tvAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/answerGrid"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:text="0"
        android:textSize="25sp" />



</RelativeLayout>